<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="5dp">
    <ImageView
        android:id="@+id/idImg"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:src="@drawable/broken_image"
        android:scaleType="centerCrop"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">
        <ImageView
            android:id="@+id/imgTime"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginVertical="5dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_timer_black_24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/txtTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:text="3 Jam"
            android:textSize="12dp"
            android:layout_marginLeft="3dp"
            android:textColor="@color/colorDark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/imgTime"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageView
            android:id="@+id/imgDifficulty"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginVertical="5dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_live_help_black_24dp"
            app:layout_constraintStart_toEndOf="@id/txtTime"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/txtDifficulty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:text="Mudah"
            android:textSize="12dp"
            android:layout_marginLeft="3dp"
            android:textColor="@color/colorDark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/imgDifficulty"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageView
            android:id="@+id/imgPortion"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginVertical="5dp"
            android:src="@drawable/ic_room_service_black_24dp"
            android:layout_marginLeft="5dp"
            app:layout_constraintStart_toEndOf="@id/txtDifficulty"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/txtPortion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:text="3 Porsi"
            android:textSize="12dp"
            android:layout_marginLeft="3dp"
            android:textColor="@color/colorDark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/imgPortion"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:paddingHorizontal="10dp"
        android:text="Resep Tumis Cuciwis, Menu Sayuran Baru yang Praktis dan Lezat"
        android:textColor="@color/colorDark"
        android:textSize="20dp"
        android:layout_marginBottom="20dp"
        android:textStyle="bold" />
</LinearLayout>