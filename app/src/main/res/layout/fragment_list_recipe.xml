<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.ListRecipe">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/idImg"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:src="@drawable/ic_launcher_background"
            android:scaleType="centerCrop"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <ImageView
                android:id="@+id/imgTime"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:padding="5dp"
                android:src="@drawable/ic_timer_black_24dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                android:id="@+id/txtTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 Jam"
                android:textColor="@color/colorDark"
                app:layout_constraintStart_toEndOf="@id/imgTime"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <ImageView
                android:id="@+id/imgDifficulty"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_insert_chart_black_24dp"
                android:padding="5dp"
                app:layout_constraintStart_toEndOf="@id/txtTime"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                android:id="@+id/txtDifficulty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mudah"
                android:textColor="@color/colorDark"
                app:layout_constraintStart_toEndOf="@id/imgDifficulty"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <ImageView
                android:id="@+id/imgPortion"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_room_service_black_24dp"
                android:padding="5dp"
                app:layout_constraintStart_toEndOf="@id/txtDifficulty"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                android:id="@+id/txtPortion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 Porsi"
                android:textColor="@color/colorDark"
                app:layout_constraintStart_toEndOf="@id/imgPortion"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Resep Tumis Cuciwis, Menu Sayuran Baru yang Praktis dan Lezat"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/colorDark"/>
    </LinearLayout>

</FrameLayout>